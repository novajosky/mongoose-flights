<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
	<thead>
		<tr>
			<th>Airline</th>
			<th>Airport</th>
			<th>Flight</th>
			<th>Departure</th>
		</tr>
	</thead>
	<tbody>
		<!-- Write the line of EJS to iterate over flights using forEach -->
		<% flights.forEach(function(f) { %>
		<tr>
			<td><%= f.airline %></td>
			<td><%= f.airport %></td>
			<td><%= f.flightNo %></td>
			<td><%= f.departs%></td>
            <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
			<% }); %>
	</tbody>
</table>

<%- include('../partials/footer') %>